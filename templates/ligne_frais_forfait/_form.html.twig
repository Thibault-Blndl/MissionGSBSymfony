{{ form_start(form) }}
    <div class="container">
        {% if form|length >= 2 %}
            <table class="table">
                <thead>
                    <tr>
                       <th>Nom</th>
                       <th>Quantit√©</th>
                       <th>Montant</th>
                    </tr>
                </thead>
                <tbody>
                    {% for i in 0..3 %}
                        <tr>
                            <td>{{ form_row(form[i].fraisForfait.libelle, {'attr':{'class':'form-control'}}) }}</td>
                            <td>{{ form_row(form[i].quantite, {'attr':{'class':'form-control'}}) }}</td>
                            <td>{{ form_row(form[i].fraisForfait.montant, {'attr':{'class':'form-control'}}) }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <button class="btn btn-outline-success">{{ button_label|default('Modifier') }}</button>
        {% else %}
            <p>Pas de ligne frais forfait !</p>
        {% endif %}

        <a class="btn btn-outline-danger" href="{{ path('fiche_frais_index') }}">Retour aux fiches</a>
    </div>
{{ form_end(form) }}

