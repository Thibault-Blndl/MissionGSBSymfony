        <h1 class="pt-5">Modification des Frais forfaitaires</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Quantite</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ligne_frais_forfait in ligne_frais_forfaits %}
